---
import '@fontsource-variable/inter';
import Nav from '../components/Nav.astro';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang='es'>
  <head>
    <meta charset='UTF-8' />
    <meta
      name='description'
      content='Astro description'
    />
    <meta
      name='viewport'
      content='width=device-width'
    />
    <link
      rel='icon'
      type='image/svg+xml'
      href='../../public/iconos/Portfolio-Fabicon.svg'
    />
    <meta
      name='generator'
      content={Astro.generator}
    />
    <title>{title}</title>
  </head>
  <body>
    <div
      id='container'
      class='w-full max-w-8xl'
    >
      <header class='md:flex md:justify-center md:items-center'>
        <Nav />
      </header>
      <slot />
    </div>
  </body>
</html>
<style is:global>
  html {
    font-family: 'Inter Variable', sans-serif;
    background: #0d0d0d;
  }
  #container {
    background-image: url(../../public/fondo-gradiente/Background-Gradient-top.svg);
    background-repeat: no-repeat;
    background-size: cover;
  }
</style>
